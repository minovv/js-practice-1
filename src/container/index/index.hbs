{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

 <main class="main">
	<section>
		<div class="form" >
  <form method="POST" action="/user-create">
	<h1 class="form__title">Create User</h1>
	<div class="form__content">
		<div class="form__field">
			<label for="email" class="form__label">Email address:</label>
			<input type="email" name="email" class="form__input">
		</div>
		<div class="form__field">
			<label for="login" class="form__label">Login:</label>
			<input type="login" name="login" class="form__input">
		</div>
		<div class="form__field">
			<label for="password" class="form__label">Password:</label>
			<input type="password" name="password" class="form__input">
		</div>
		<button class="form__button">Create User</button>
	</div>
  </form>
</div>
	</section>
	
	<section>
		<div class="form" >
			<h1 class="form__title">Created Users List</h1>
			<div class="user-list">
				{{#with data.users}}
					{{#if isEmpty}}
					<mark>Empty</mark>
					{{else}}
					<ul>
					{{#each list}}		
						<li>Email: {{email}} | login: {{login}} <a href="/user-delete?id={{id}}">(Delete)</a> </li>		
					{{/each}}
					</ul>		
					{{/if}}
				{{/with}}
			</div>  		
		</div>
	</section>
 </main>



